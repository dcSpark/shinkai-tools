{
    "name": "Google Drive Developer API",
    "homepage": "https://shinkai.com",
    "description": "Tool to make requests to the Google Drive Developer API using OAuth for authentication.",
    "author": "@@localhost.sep-shinkai",
    "version": "1.0.0",
    "keywords": [
        "google",
        "drive",
        "documents",
        "api",
        "request",
        "oauth"
    ],
    "runner": "any",
  "operating_system": ["linux", "macos", "windows"],
  "tool_set": "",
  "configurations": {
        "type": "object",
        "properties": {},
        "required": []
    },
    "parameters": {
        "type": "object",
        "properties": {
            "url": { 
              "type": "string", 
              "description": "Google Drive API endpoint URL (e.g., 'https://www.googleapis.com/drive/v3/files')"
            },
            "method": { 
              "type": "string", 
              "description": "HTTP method: GET (list/read), POST (create/upload), PATCH (update), DELETE (remove files)"
            },
            "body": { 
              "type": "string", 
              "description": "JSON string for request body. For file uploads, include metadata and content as per API specs",
              "nullable": true 
            },
            "query_params": { 
              "type": "string", 
              "description": "URL parameters as JSON (e.g., '{\"q\": \"mimeType='application/pdf'\", \"fields\": \"*\"}')",
              "nullable": true 
            },
            "headers": { 
              "type": "string", 
              "description": "Custom headers as 'key: value' pairs, one per line. OAuth headers added automatically",
              "nullable": true 
            }
        },
        "required": [
            "url",
            "method"
        ]
    },
    "result": {
        "type": "object",
        "properties": {
            "status": { 
              "type": "number", 
              "description": "HTTP status code (2xx=success, 4xx=client error, 5xx=server error)"
            },
            "statusText": { 
              "type": "string", 
              "description": "HTTP status message (e.g., 'OK', 'File Created', 'Not Found')"
            },
            "data": { 
              "type": "any", 
              "description": "Response payload as JSON. Contains file metadata, content, or operation results"
            }
        },
        "required": [
            "status",
            "statusText",
            "data"
        ]
    },
    "sqlTables": [],
    "sqlQueries": [],
    "tools": [],
    "oauth": [
        {
            "name": "GoogleDrive",
            "version": "2.0",
            "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
            "redirectUrl": "https://secrets.shinkai.com/redirect",
            "tokenUrl": "https://oauth2.googleapis.com/token",
            "clientId": "",
            "clientSecret": "",
            "scopes": [
              "https://www.googleapis.com/auth/documents",
              "https://www.googleapis.com/auth/drive"
            ],
            "responseType": "code",
            "refreshToken": "",
            "pkceType": "",
            "request_token_auth_header": "",
            "request_token_content_type": ""
          }
    ]
}
