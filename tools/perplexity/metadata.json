{
    "name": "Perplexity",
    "homepage": "https://github.com/dcSpark/shinkai-tools/blob/main/tools/perplexity/README.md",
    "description": "Searches the internet using Perplexity",
    "author": "Shinkai",
    "version": "1.0.0",
    "keywords": [
      "perplexity",
      "search"
    ],
    "runner": "any",
  "operating_system": ["linux", "macos", "windows"],
  "tool_set": "",
  "configurations": {
      "type": "object",
      "properties": {
        "chromePath": {
          "type": "string",
          "nullable": true,
          "description": "Full path to Chrome/Chromium executable. Optional - uses system default if not specified"
        }
      },
      "required": []
    },
    "parameters": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Search query text. Natural language questions work best. No length limit but keep reasonable"
        }
      },
      "required": [
        "query"
      ]
    },
    "result": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string",
          "description": "AI-generated answer combining web search results with analysis. May include citations"
        }
      },
      "required": [
        "response"
      ]
    }
  }
