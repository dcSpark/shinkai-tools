{
  "name": "X/Twitter Developer API",
  "homepage": "https://github.com/dcSpark/shinkai-tools/blob/main/tools/dev-twitter/README.md",
  "description": "Tool to make requests to the X/Twitter Developer API using OAuth for authentication.",
  "author": "@@localhost.sep-shinkai",
  "version": "1.0.0",
  "keywords": [
      "x",
      "twitter",
      "api",
      "request",
      "oauth"
  ],
  "runner": "any",
  "operating_system": ["linux", "macos", "windows"],
  "tool_set": "",
  "configurations": {
      "type": "object",
      "properties": {},
      "required": []
  },
  "parameters": {
      "type": "object",
      "properties": {
          "url": { 
              "type": "string", 
              "description": "Twitter API v2 endpoint URL (e.g., 'https://api.twitter.com/2/tweets')"
          },
          "method": { 
              "type": "string", 
              "description": "HTTP method: GET (read tweets/users), POST (create tweet), DELETE (remove tweet)"
          },
          "body": { 
              "type": "string", 
              "description": "JSON string for request body. For tweets, include text and optional parameters",
              "nullable": true 
          },
          "query_params": { 
              "type": "string", 
              "description": "URL parameters as JSON (e.g., '{\"tweet.fields\": \"created_at,author_id\"}')",
              "nullable": true 
          },
          "headers": { 
              "type": "string", 
              "description": "Custom headers as 'key: value' pairs, one per line. OAuth headers added automatically",
              "nullable": true 
          }
      },
      "required": [
          "url",
          "method"
      ]
  },
  "result": {
      "type": "object",
      "properties": {
          "status": { 
              "type": "number", 
              "description": "HTTP status code (2xx=success, 4xx=client error, 5xx=server error)"
          },
          "statusText": { 
              "type": "string", 
              "description": "HTTP status message (e.g., 'OK', 'Tweet Created', 'Not Found')"
          },
          "data": { 
              "type": "any", 
              "description": "Response payload as JSON. Contains tweet data, user info, or operation results"
          }
      },
      "required": [
          "status",
          "statusText",
          "data"
      ]
  },
  "sqlTables": [],
  "sqlQueries": [],
  "tools": [],
  "oauth": [
    {
        "name": "twitter",
        "version": "2.0",
        "authorizationUrl": "https://twitter.com/i/oauth2/authorize",
        "redirectUrl": "https://secrets.shinkai.com/redirect",
        "tokenUrl": "https://api.x.com/2/oauth2/token",
          "clientId": "",
          "clientSecret": "",
           "scopes": [
          "tweet.read",
          "tweet.write",
          "users.read",
          "offline.access"
        ],
        "responseType": "code",
        "pkceType": "plain",
        "refreshToken": "true"
        }
  ]
}
