{
  "id": "wikimedia-historical-events",
  "version": "1.0.0",
  "name": "Wikimedia Historical Events",
  "description": "Retrieves historical events, births, deaths, and holidays for any date from Wikimedia. Supports multiple languages",
  "author": "Shinkai",
  "keywords": [
    "wikimedia",
    "history",
    "wikipedia",
    "events",
    "onthisday",
    "births",
    "deaths",
    "holidays"
  ],
  "runner": "any",
  "operating_system": ["linux", "macos", "windows"],
  "tool_set": "",
  "configurations": {
    "type": "object",
    "properties": {
      "project": {
        "type": "string",
        "description": "Target Wikimedia project (wikipedia, wiktionary, etc). Default: wikipedia",
        "default": "wikipedia"
      },
      "language": {
        "type": "string",
        "description": "Two-letter ISO language code (en, es, fr, etc). Must be supported by project. Default: en",
        "default": "en"
      }
    },
    "required": []
  },
  "parameters": {
    "type": "object",
    "properties": {
      "date": {
        "type": "string",
        "description": "Target date in YYYY-MM-DD format. Must be valid date. Default: current date",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "type": {
        "type": "string",
        "description": "Event category to fetch: all, events, births, deaths, or holidays. Default: all",
        "enum": ["all", "events", "births", "deaths", "holidays"],
        "default": "all"
      }
    },
    "required": ["date"]
  },
  "result": {
    "type": "object",
    "properties": {
      "events": {
        "type": "object",
        "properties": {
          "selected_date": {"type": "string", "description": "Date in YYYY-MM-DD format that was queried"},
          "events": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "text": {"type": "string", "description": "Description of the historical event"},
                "year": {"type": "string", "description": "Year when the event occurred"},
                "links": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {"type": "string", "description": "Title of related Wikimedia article"},
                      "url": {"type": "string", "description": "Full URL to related article"}
                    },
                    "required": ["title", "url"]
                  }
                },
                "required": ["text", "year", "links"]
              }
            }
          },
          "births": {"$ref": "#/result/properties/events/properties/events"},
          "deaths": {"$ref": "#/result/properties/events/properties/events"},
          "holidays": {"$ref": "#/result/properties/events/properties/events"}
        },
        "required": ["selected_date", "events", "births", "deaths", "holidays"]
      }
    },
    "required": ["events"]
  }
}
