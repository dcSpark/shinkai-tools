{
  "name": "GitHub API Request",
  "homepage": "https://github.com/dcSpark/shinkai-tools/blob/main/tools/dev-github/README.md",
  "description": "Tool to make requests to the GitHub API using OAuth for authentication.",
  "author": "@@localhost.sep-shinkai",
  "version": "1.0.0",
  "keywords": [
      "github",
      "api",
      "request",
      "oauth"
  ],
  "runner": "any",
  "operating_system": ["linux", "macos", "windows"],
  "tool_set": "",
  "configurations": {
      "type": "object",
      "properties": {},
      "required": []
  },
  "parameters": {
      "type": "object",
      "properties": {
          "url": { 
              "type": "string", 
              "description": "GitHub API endpoint URL (e.g., 'https://api.github.com/repos/owner/repo/issues')"
          },
          "method": { 
              "type": "string", 
              "description": "HTTP method: GET (read), POST (create), PUT (update), PATCH (modify), or DELETE (remove)"
          },
          "body": { 
              "type": "string", 
              "description": "JSON string for request body. Required for POST/PUT/PATCH. Must be valid JSON",
              "nullable": true 
          },
          "query_params": { 
              "type": "string", 
              "description": "URL query parameters as JSON object string (e.g., '{\"state\": \"open\"}')",
              "nullable": true 
          },
          "headers": { 
              "type": "string", 
              "description": "Custom headers as 'key: value' pairs, one per line. OAuth headers added automatically",
              "nullable": true 
          }
      },
      "required": [
          "url",
          "method"
      ]
  },
  "result": {
      "type": "object",
      "properties": {
          "status": { 
              "type": "number", 
              "description": "HTTP status code (2xx=success, 4xx=client error, 5xx=server error)"
          },
          "statusText": { 
              "type": "string", 
              "description": "HTTP status message (e.g., 'OK', 'Created', 'Not Found')"
          },
          "data": { 
              "type": "any", 
              "description": "Response payload as parsed JSON. Structure varies by endpoint and method used"
          }
      },
      "required": [
          "status",
          "statusText",
          "data"
      ]
  },
  "sqlTables": [],
  "sqlQueries": [],
  "tools": [],
  "oauth": [
      {
        "name": "Github",
        "version": "2.0",
        "authorizationUrl": "https://github.com/login/oauth/authorize",
        "redirectUrl": "https://secrets.shinkai.com/redirect",
        "tokenUrl": "https://github.com/login/oauth/access_token",
        "clientId": "",
        "clientSecret": "",
        "scopes": [
          "repo",
          "user"
        ],
        "responseType": "code",
        "refreshToken": "",
        "pkceType": "",
        "request_token_auth_header": "",
        "request_token_content_type": ""
      
      }
  ]
}
