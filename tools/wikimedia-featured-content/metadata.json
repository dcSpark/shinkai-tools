{
  "id": "wikimedia-featured-content",
  "version": "1.0.0",
  "name": "Wikimedia Featured Content",
  "description": "Fetches daily featured article, image, and news from Wikimedia projects. Supports multiple languages",
  "author": "Shinkai",
  "keywords": [
    "wikimedia",
    "featured",
    "wikipedia",
    "content",
    "articles",
    "images",
    "news"
  ],
  "runner": "any",
  "operating_system": ["linux", "macos", "windows"],
  "tool_set": "",
  "configurations": {
    "type": "object",
    "properties": {
      "project": {
        "type": "string",
        "description": "Target Wikimedia project (wikipedia, wiktionary, etc). Default: wikipedia",
        "default": "wikipedia"
      },
      "language": {
        "type": "string",
        "description": "Two-letter ISO language code (en, es, fr, etc). Must be supported by project. Default: en",
        "default": "en"
      }
    },
    "required": []
  },
  "parameters": {
    "type": "object",
    "properties": {
      "date": {
        "type": "string",
        "description": "Target date in YYYY-MM-DD format. Must be valid date. Default: current date",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      }
    }
  },
  "result": {
    "type": "object",
    "properties": {
      "featured": {
        "type": "object",
        "properties": {
          "tfa": {
            "type": "object",
            "properties": {
              "title": {"type": "string", "description": "Title of featured article"},
              "extract": {"type": "string", "description": "Article excerpt/summary text"},
              "url": {"type": "string", "description": "Full URL to featured article"}
            }
          },
          "image": {
            "type": "object",
            "properties": {
              "title": {"type": "string", "description": "Title of featured image"},
              "description": {"type": "string", "description": "Image caption and attribution details"},
              "url": {"type": "string", "description": "Direct URL to featured image file"}
            }
          },
          "news": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "story": {"type": "string", "description": "News story headline and summary"},
                "links": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {"type": "string", "description": "Title of related article"},
                      "url": {"type": "string", "description": "URL to related article"}
                    }
                  }
                }
              }
            }
          }
        },
        "required": ["tfa", "image", "news"]
      }
    },
    "required": ["featured"]
  }
}
