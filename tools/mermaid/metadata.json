{
  "id": "mermaid",
  "name": "mermaid",
  "version": "1.0.0",
  "description": "Generate diagrams and flowcharts using Mermaid syntax, it receives a natural language description and returns a PNG image and the final Mermaid code",
  "author": "Shinkai",
  "keywords": [
    "mermaid",
    "diagram",
    "flowchart",
    "visualization",
    "markdown"
  ],
  "runner": "any",
  "operating_system": [
    "linux",
    "macos",
    "windows"
  ],
  "tool_set": "",
  "configurations": {
    "type": "object",
    "properties": {
      "maxRetries": {
        "type": "number",
        "description": "Maximum number of retries for the tool",
        "default": 5
      }
    },
    "required": []
  },
  "parameters": {
    "type": "object",
    "properties": {
      "description": {
        "type": "string",
        "description": "Mermaid diagram code"
      }
    },
    "required": [
      "description"
    ]
  },
  "result": {
    "type": "object",
    "properties": {
      "filePath": {
        "type": "string",
        "description": "Path to the PNG image"
      },
      "finalMermaid": {
        "type": "string",
        "description": "Final Mermaid code"
      }
    },
    "required": [
      "filePath",
      "finalMermaid"
    ]
  }
}