{
  "name": "@shinkai_protocol/shinkai-tool-mermaid-diagram",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/shinkai-tool-mermaid-diagram/src",
  "projectType": "library",
  "tags": ["tool"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "options": {
        "command": "deno task tool-bundler --entry ./apps/shinkai-tool-mermaid-diagram/src/index.ts --outputFolder ./dist/apps/shinkai-tool-mermaid-diagram"
      },
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno lint ./apps/shinkai-tool-mermaid-diagram/src/index.ts"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno test --no-check --allow-all ./apps/shinkai-tool-mermaid-diagram/src/**/*.test.ts"
      }
    }
  }
}
