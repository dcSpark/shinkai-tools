{
    "name": "Perplexity",
    "homepage": "https://github.com/dcSpark/shinkai-tools/blob/main/tools/perplexity/README.md",
    "description": "Searches the internet using Perplexity",
    "author": "Shinkai",
    "version": "1.0.0",
    "keywords": [
      "perplexity",
      "search"
    ],
    "runner": "any",
  "operating_system": ["linux", "macos", "windows"],
  "tool_set": "",
  "configurations": {
      "type": "object",
      "properties": {
        "chromePath": {
          "type": "string",
          "nullable": true,
          "description": "Optional path to Chrome executable for browser automation. If not provided, the tool will attempt to use the default Chrome installation. For more information on Chrome paths, see <https://www.chromium.org/developers/how-tos/run-chromium-with-flags/>"
        }
      },
      "required": []
    },
    "parameters": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "The search query to send to Perplexity"
        }
      },
      "required": [
        "query"
      ]
    },
    "result": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string",
          "description": "The search results and analysis from Perplexity"
        }
      },
      "required": [
        "response"
      ]
    }
  }
